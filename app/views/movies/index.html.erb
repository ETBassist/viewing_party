
<section class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 flex items-center justify-around flex-row -4 py-2 sm:px-0"><div>
  <%= button_to 'Discover Top 40 Movies', '/movies', method: :get, class: "relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
</div>

<p class="mt-6 text-center text-xl font-extrabold text-gray-900">OR</p>

<div id="search-movies">
  <%= form_tag '/movies', method: :get, class: "mt-8 space-y-6" do %>
  <div class="rounded-md shadow-sm -space-y-px">
    <%= text_field_tag :search, nil, placeholder: 'Search By Movie Title', class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm" %>
  </div>

  <div>
    <%= submit_tag 'Search For Movies', class: "relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
  </div>
<% end %>
</div></section>

<section id="results" class="flex items-center justify-center">
  <% if @movies.empty? %>
    <p>No movies have matched your request! Please try again!</p>
  <% else %>
    <div class="flex flex-col w-1/2">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-green-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Movie Title
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Vote Average
                  </th>
                </tr>
              </thead>

              <tbody class="bg-white divide-y divide-gray-200">
                <% @movies.each do |movie| %>
              </section>
                  <tr class="movie">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900">
                        <%= link_to movie.title, "/movies/#{movie.movie_id}", class: 'movie-title' %>
                      </div>
                    </td>
                    <td class="vote-average px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      Vote Average: <%= movie.vote_average %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
